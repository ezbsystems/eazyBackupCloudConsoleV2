# Prevent execution of PHP files in uploads
<Files "*.php">
    Order Allow,Deny
    Deny from all
</Files>

# Allow only image files to be served
<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Prevent directory browsing
Options -Indexes

# Block access to all files except images
<FilesMatch "^(?!.*\.(jpg|jpeg|png|gif|webp)$).*$">
    Order Allow,Deny
    Deny from all
</FilesMatch> 